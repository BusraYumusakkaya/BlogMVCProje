@model WritersIndexVM
@{
    ViewData["Title"] = "Writer";
}
<div>
    <h1 class="display-6 text-light bg-secondary text-center">WRİTERS</h1>
</div>
<div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="search for a topic " aria-label="search for a topic " aria-describedby="button-addon2">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2" action="FindTopic">SEARCH</button>
    </div>
</div>
<table class="table">
    <thead>
        <br />
        <br />
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>UserName</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ApplicationUsers)
        {
            <tr>
                @if (item.Photo != null)
                {
                    <td><img class="rounded" src="/image/@item.Photo" alt="photo" width="70" height="70" /></td>
                }
                else
                {
                    <td><img class="rounded" src="/image/default2.png" alt="default" width="70" height="70" /></td>
                }
                <td>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>
                    <a asp-action="Profile" asp-route-id="@item.Id" class=" btn btn-info">Go To Profile </a>
                </td>
            </tr>
        }
    </tbody>
</table>