@using Microsoft.AspNetCore.Identity
@using _31._01.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager

@model WriterProfileVm
@{
    ViewData["Title"] = "Writer";
}
@if (SignInManager.UserManager.GetUserId(User) == Model.Id)
{
    <div>
    <h1 class="display-6 text-light bg-secondary text-center">Profile</h1>
    </div>
}else{
    <div>
        <h1 class="display-6 text-light bg-secondary text-center">@Model.FirstName @Model.LastName's Profile</h1>
    </div>
}
<input asp-for="Id" hidden />
<div class="container">
    <div class="row">
        <div class="col-6 col-md-4">
            <div class="card" style="width: 18rem;">
                @if (Model.Photo != null)
                {
                    <td><img src="/image/@Model.Photo" alt="photo" class="card-img-thumbnail" /></td>
                }
                else
                {
                    <td><img src="/image/default2.png" alt="default" class="card-img-top" /></td>
                }
                <div class="card-body">
                    <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.Email</li>
                    @if (SignInManager.UserManager.GetUserId(User) == Model.Id){
                        @if(Model.İnformation!=null){
                            <li class="list-group-item">
                                <form asp-action="AddInformation">
                                    <input asp-for="Id" hidden />
                                    <br />
                                    <div class="form-group">
                                        <label asp-for="İnformation" class="control-label"></label>
                                        <textarea asp-for="İnformation" class="form-control" aria-label="With textarea"></textarea>
                                    </div>
                                    <br />
                                    <div class="form-group text-center">
                                        <input type="submit" value="Change Information" class="btn btn-info" />
                                    </div>

                                </form>
                            </li>
                        }else{
                            <li class="list-group-item">
                                <form asp-action="AddInformation">
                                <input asp-for="Id" hidden />
                                <br />
                                <div class="form-group">
                                        <label asp-for="İnformation" class="control-label"></label>
                                        <textarea asp-for="İnformation" class="form-control" aria-label="With textarea"></textarea>
                                </div>
                                <br />
                                <div class="form-group text-center">
                                        <input type="submit" value="Add Information" class="btn btn-info" />
                                </div>
            
                                </form>
                            </li>
                        }
                    }else{
                        <li class="list-group-item">@Model.İnformation</li>
                    }
                    
                    
                
                @if (SignInManager.UserManager.GetUserId(User)==Model.Id){
                    <li class="list-group-item">
                        <div >
                        <a asp-action="AddArticle" asp-route-id="@Model.Id" class="text-decoration-none" style="position: relative;">
                            Click To Add An Article
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                              <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                            </svg></a>
                        </div>
                    </li>
                        <li class="list-group-item  text-center">
                        <div>
                                <a asp-action="Setting" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                    Setting
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear" viewBox="0 0 16 16">
                                        <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492zM5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0z" />
                                        <path d="M9.796 1.343c-.527-1.79-3.065-1.79-3.592 0l-.094.319a.873.873 0 0 1-1.255.52l-.292-.16c-1.64-.892-3.433.902-2.54 2.541l.159.292a.873.873 0 0 1-.52 1.255l-.319.094c-1.79.527-1.79 3.065 0 3.592l.319.094a.873.873 0 0 1 .52 1.255l-.16.292c-.892 1.64.901 3.434 2.541 2.54l.292-.159a.873.873 0 0 1 1.255.52l.094.319c.527 1.79 3.065 1.79 3.592 0l.094-.319a.873.873 0 0 1 1.255-.52l.292.16c1.64.893 3.434-.902 2.54-2.541l-.159-.292a.873.873 0 0 1 .52-1.255l.319-.094c1.79-.527 1.79-3.065 0-3.592l-.319-.094a.873.873 0 0 1-.52-1.255l.16-.292c.893-1.64-.902-3.433-2.541-2.54l-.292.159a.873.873 0 0 1-1.255-.52l-.094-.319zm-2.633.283c.246-.835 1.428-.835 1.674 0l.094.319a1.873 1.873 0 0 0 2.693 1.115l.291-.16c.764-.415 1.6.42 1.184 1.185l-.159.292a1.873 1.873 0 0 0 1.116 2.692l.318.094c.835.246.835 1.428 0 1.674l-.319.094a1.873 1.873 0 0 0-1.115 2.693l.16.291c.415.764-.42 1.6-1.185 1.184l-.291-.159a1.873 1.873 0 0 0-2.693 1.116l-.094.318c-.246.835-1.428.835-1.674 0l-.094-.319a1.873 1.873 0 0 0-2.692-1.115l-.292.16c-.764.415-1.6-.42-1.184-1.185l.159-.291A1.873 1.873 0 0 0 1.945 8.93l-.319-.094c-.835-.246-.835-1.428 0-1.674l.319-.094A1.873 1.873 0 0 0 3.06 4.377l-.16-.292c-.415-.764.42-1.6 1.185-1.184l.292.159a1.873 1.873 0 0 0 2.692-1.115l.094-.319z" />
                                    </svg>
                                </a>
                        </div>
                    </li>
                }
                </ul>
            </div>

        </div>
        
        <div class="col-md-8">
        @foreach (var item in Model.Articles)
        {
               
                var tm = "#deleteModal" + item.Id;
                var mid = "deleteModal" + item.Id;
            <div class="card border-info mb-3">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Name)</h5>
                    @if (item.Content.Length > 150)
                    {
                        <p class="card-text">@item.Content.Substring(0,150)...</p>
                    }
                    else
                    {
                        <p class="card-text">@item.Content</p>
                    }
                        <p class="card-text"><small class="text-muted">@item.CreatedDate.ToString("yyyy-MM-dd") before added </small></p>
                    <div class="d-flex mb-3">
                            <a asp-action="Read" asp-route-id="@item.Id" class="btn btn-outline-warning">Read</a>
                    @if (SignInManager.UserManager.GetUserId(User) == Model.Id)
                    {
                        <a asp-action="ChooseCategory" asp-route-id="@item.Id" class="btn btn-outline-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tags-fill" viewBox="0 0 16 16">
                                <path d="M2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2zm3.5 4a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
                                <path d="M1.293 7.793A1 1 0 0 1 1 7.086V2a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l.043-.043-7.457-7.457z" />
                            </svg>  
                        </a>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="@tm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                        </svg></button>
                                
                          
                        
                    }
                    </div>
                </div>
            </div>
                <!--Modal Start-->
                <div class="modal fade" id="@mid" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="deleteModalLabel">This item will be deleted!</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">Are You Sure?</div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Yes</a>
                            </div>
                        </div>

                    </div>

                </div>
	    }
        </div>
	</div>
</div>