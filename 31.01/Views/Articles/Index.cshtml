@model ArticlesIndexVM
@{
    ViewData["Title"] = "Article";
}

<body>
    <div>
        <h1 class="display-6 text-light bg-secondary text-center">ARTICLES</h1>
    </div>
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="search for a topic " aria-label="search for a topic " aria-describedby="button-addon2">
        <div class="input-group-append">
            <button  class="btn btn-outline-secondary" type="button" id="button-addon2" action="FindTopic">SEARCH</button>
        </div>
    </div>
    @foreach (var item in Model.Articles)
    {
        <div class="card text-center">
            <div class="card-header">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="card-body">
                <h5 class="card-title text-muted ">@Html.DisplayFor(modelItem => item.ApplicationUser.FirstName) @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)</h5>
                @if (item.Content.Length > 150)
                {
                    <p class="card-text">@item.Content.Substring(0,150)...</p>
                }
                else
                {
                    <p class="card-text">@item.Content</p>
                }
                <a href="#" class="btn btn-outline-warning">Read</a>
            </div>
            <div class="card-footer text-muted">
                <button type="button" class=" btn btn-outline-danger rounded-circle">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                    </svg>
                </button> @Html.DisplayFor(modelItem => item.Popular)
            </div>
        </div>
        <br />

    }
</body>
